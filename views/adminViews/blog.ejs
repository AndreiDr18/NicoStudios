<html lang="zxx">

<head>
	<%- include("./partials/meta.ejs") %>
		<!-- Favicon -->
		<link href="/img/favicon.ico" rel="shortcut icon" />

		<!-- Google font -->

		<link href="/https://fonts.googleapis.com/css?family=Poppins:300,300i,400,400i,500,500i,600,600i,700,700i&display=swap" rel="stylesheet">
		<!-- Stylesheets -->
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" />
		<link rel="stylesheet" href="css/font-awesome.min.css" />
		<link rel="stylesheet" href="css/slicknav.min.css" />
		<link rel="stylesheet" href="css/owl.carousel.min.css" />

		<!-- Main Stylesheets -->
		<link rel="stylesheet" href="/css/style.css" />


		<!--[if lt IE 9]>
		<script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
		<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
	<![endif]-->

</head>

<body>
	<!-- Page Preloder -->
	<div id="preloder">
		<div class="loader"></div>
	</div>

	<!-- Header section  -->
	<header class="header-section">
		<%- include("./partials/navbar.ejs") %>
	</header>
	<div class="clearfix"></div>
	<!-- Header section end  -->
	<div class="container text-center mt-4">
		<h2 class="mt-4">blogs</h2>
		<div class="row text-center mt-4">
			<div class="col-12 mt-4">
				<table class="table">
					<thead>
						<tr>
							<th scope="col">Name</th>
						</tr>
					</thead>
					<tbody>
						<% for(blog of blogs){ %>
						<tr>
							<td><%= blog.title %></td>
							<td><a id="<%=blog._id%>view" class="btn btn-success">View</a></td>
							<td></td>
						</tr>
						<% } %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<% for(blog of blogs){ %>
	<div id="<%=blog._id%>" class="modal fade" aria-hidden="true">
		<div class="modal-dialog modal-lg">

			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title">Edit <%=blog.title%></h5>
				</div>
				<div class="modal-body text-center">
					<form action="/admin/blog/edit/<%=blog._id%>" method="post" enctype="multipart/form-data">
						<div class="form-group text-center">
							<label for="title">Title</label>
							<input class="form-control" type="text" name="title" value="<%=blog.title%>">
							<hr>
							<label for="snippet">Snippet</label>
							<input class="form-control" type="text" name="snippet" value="<%=blog.snippet%>">
							<hr>
							<label for="description">Description</label>
							<input class="form-control" type="text" name="description" value="<%=blog.description%>">
							<hr>
							<input class="form-control mb-4" type="file" name="drawing" value="">
							<input type="submit" value="EDIT" class="site-btn">
							<a href="/admin/blog/delete/<%=blog._id%>" class="site-btn">Delete</a>
							<button type="button" class="site-btn" data-dismiss="modal">Close</button>
						</div>
					</form>
				</div>
				<div class="modal-footer">
					<img src="../img/blog/<%=blog._id%>.jpg" alt="">
				</div>
			</div>
		</div>
	</div>
	<% } %>

	<!--====== Javascripts & Jquery ======-->
	<script src="js/jquery-3.2.1.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js"></script>
	<script src="js/jquery.slicknav.min.js"></script>
	<script src="js/owl.carousel.min.js"></script>
	<script src="js/circle-progress.min.js"></script>
	<script src="js/mixitup.min.js"></script>
	<script src="js/instafeed.min.js"></script>
	<script src="js/masonry.pkgd.min.js"></script>
	<script src="js/main.js"></script>
	<script type="text/javascript">
		<% for (blog of blogs){ %>
				$('#<%=blog._id%>view').click(()=>{
						$('#<%=blog._id%>').modal("show");
				});

		<% } %>
	</script>

</body>

</html>
