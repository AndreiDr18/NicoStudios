	<div class="hero-section mt-4">

		<!-- For less or equal to 15 drawings -->
		<%if(drawings.length<=15){%>
		<div class="hero-slider owl-carousel">
			<% for(drawing of drawings){%>
			<div class="hero-item portfolio-item set-bg" data-setbg="img/portfolio/<%=drawing._id%>.jpg">
				<a href="/portfolio" class="hero-link">
					<h4><%=drawings.length%></h4>
				</a>
			</div>
			<% }%>
		</div>
		<% } %>
