		<%if(drawings.length > 24){%>
		<%firstHero = drawings.slice(0, drawings.length/3)%>
		<%secondHero = drawings.slice(drawings.length/2, (2*drawings.length)/3)%>
		<%thirdHero = drawings.slice((2*drawings.length)/3, 31)%>
		<div class="hero-slider owl-carousel">
			<% for(drawing of firstHero){%>
