		<%if(drawings.length > 15 && drawings.length<=24){%>
		<%firstHero = drawings.slice(0, drawings.length/2)%>
		<%secondHero = drawings.slice(drawings.length/2, drawings.length)%>
		<div class="hero-slider owl-carousel">
			<% for(drawing of firstHero){%>
			<div class="hero-item portfolio-item set-bg" data-setbg="img/portfolio/<%=drawing._id%>.jpg">
				<a href="/portfolio" class="hero-link">
					<h4>Take a look at my portfolio</h4>
				</a>
			</div>
			<% }%>
		</div>
		<div class="hero-slider owl-carousel">
			<% for(drawing of secondHero){%>
			<div class="hero-item portfolio-item set-bg" data-setbg="img/portfolio/<%=drawing._id%>.jpg">
				<a href="/portfolio" class="hero-link">
					<h4>Take a look at my portfolio</h4>
				</a>
			</div>
			<% }%>
		</div>
		<% } %>
